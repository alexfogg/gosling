.nivoSlider {
    position:relative;
    background:url(<%= asset_path "loading.gif" %>) no-repeat 50% 50%;
}
.nivoSlider img {
    position:absolute;
    top:0px;
    left:0px;
    display:none;
}
.nivoSlider a {
    border:0;
    display:block;
}

