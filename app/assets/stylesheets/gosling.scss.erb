.nivoSlider {
    position:relative;
    background:url(<%= asset_path "loading.gif" %>) no-repeat 50% 50%;
}
.nivoSlider img {
    position:absolute;
    top:0px;
    left:0px;
    display:none;
}
.nivoSlider a {
    border:0;
    display:block;
}


li {
  list-style: none;
}

.title{
  color: white;
  font-size: 30px;
}


.vidcontainer{
  width: 900px;
  left:36%;
}

.vidcontainer iframe{
  margin-left: 40px;
  background: url("http://m.rgbimg.com/cache1sw4YI/users/x/xy/xymonau/600/nxXqi9O.jpg");
