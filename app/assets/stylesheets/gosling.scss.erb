.nivoSlider {
    position:relative;
    background:url(<%= asset_path "loading.gif" %>) no-repeat 50% 50%;
}
.nivoSlider img {
    position:absolute;
    top:0px;
    left:0px;
    display:none;
}
.nivoSlider a {
    border:0;
    display:block;
}


li {
  list-style: none;
}

.title{
  color: white;
  font-size: 30px;
}

h1{
  font-size: 60px;
}

#container{
width: 800px;
max-height: 750px;
overflow: scroll;
background: url('conback.png');
background-repeat: repeat;
margin: 20px auto;
padding: 40px 40px;
-moz-box-shadow: inset 0 0 10px 10px #888;
-webkit-box-shadow: inset 0 0 10px 10px#888;
box-shadow: inset 0 0 10px 10px #888;
border-radius: 40px;
opacity: 0.9;
}

#goslingfeed table {
  background-color: transparent;
  border: 0px;
}

#goslingfeed a {
  color: black;
}

#goslingfeed .button {
  background-color: grey;
  border: 1px black;
}

.vidcontainer{
  width: 900px;
  left:36%;
}

.vidcontainer iframe{
  margin-left: 40px;
  background: url("http://m.rgbimg.com/cache1sw4YI/users/x/xy/xymonau/600/nxXqi9O.jpg");
}


.button_nav_show
{
  background-color: #000000;
  border-radius: 10px;
  padding: 2px 2px;
  text-align: center;
  margin: 10px auto;
  -moz-box-shadow: 0 0 2px 2px #888;
  -webkit-box-shadow: 0 0 2px 2px#888;
  box-shadow: 0 0 2px 2px #888;
  width: 250px;
  clear: both;
  color: #0099cc;
  font-family: sans-serif;
  font-weight: 800;
  opacity: .5;
  border: 1px solid black;
  font-size: 20px;
}

div#body{
  height: 900px;
}

.spotify{

  position: fixed;
  bottom: 0px;
  float: right;
}
#footer{
  bottom : 10px;
}


.reveal-modal vidcontainer{
background: url("http://m.rgbimg.com/cache1sw4YI/users/x/xy/xymonau/600/nxXqi9O.jpg")
}
